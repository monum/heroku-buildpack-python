#!/usr/bin/env bash
# bin/release <build-dir>

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
BUILD_DIR=$1

MANAGE_FILE=$(cd $BUILD_DIR && find . -maxdepth 3 -type f -name 'manage.py' | head -1)
MANAGE_FILE=${MANAGE_FILE:2}

cat <<EOF
---
config_vars:
  PATH: bin:/usr/local/bin:/usr/bin:/bin
  PYTHONUNBUFFERED: true
  LIBRARY_PATH: .heroku/vendor/lib:/app/.gis/proj4/lib:/app/.gis/gdal/lib:/app/.gis/geos/lib
  LD_LIBRARY_PATH: .heroku/vendor/lib:/app/.gis/proj4/lib:/app/.gis/gdal/lib:/app/.gis/geos/lib
  LANG: en_US.UTF-8
  PYTHONPATH: /app
EOF


if [[ $MANAGE_FILE ]]; then
cat <<EOF

addons:
  heroku-postgresql:dev
EOF
fi
